{
  "name": "@littlebearapps/outlook-mcp",
  "version": "3.0.0",
  "description": "MCP server for Claude to access Outlook data via Microsoft Graph API",
  "main": "index.js",
  "bin": {
    "outlook-mcp": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "auth-server": "node outlook-auth-server.js",
    "test-mode": "USE_TEST_MODE=true node index.js",
    "inspect": "npx @modelcontextprotocol/inspector node index.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "claude",
    "outlook",
    "mcp",
    "microsoft-graph",
    "email",
    "calendar",
    "contacts",
    "model-context-protocol",
    "anthropic"
  ],
  "author": "Little Bear Apps <hello@littlebearapps.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/littlebearapps/outlook-mcp.git"
  },
  "homepage": "https://github.com/littlebearapps/outlook-mcp#readme",
  "bugs": {
    "url": "https://github.com/littlebearapps/outlook-mcp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "index.js",
    "config.js",
    "outlook-auth-server.js",
    "auth/",
    "calendar/",
    "categories/",
    "contacts/",
    "email/",
    "folder/",
    "rules/",
    "settings/",
    "advanced/",
    "utils/",
    ".env.example",
    "README.md",
    "LICENSE",
    "llms.txt"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "dotenv": "^17.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@modelcontextprotocol/inspector": "^0.21.0",
    "@eslint/js": "^9.39.3",
    "eslint": "^9.39.3",
    "globals": "^16.2.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "supertest": "^7.2.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 73,
        "branches": 61,
        "functions": 75,
        "lines": 74
      }
    }
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
